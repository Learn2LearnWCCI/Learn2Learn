@using System.Web.UI.WebControls
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Learn2Learn</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Architects+Daughter|News+Cycle" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="navbar navbar-fixed-top" id="flip">
            <h2 class="text-center">Menu</h2>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <a class="navbar-brand pane" href="#">
                    <img src="~/Content/images/L2L Brand.png" width="30" height="50" alt="Learn2Learn"/>
                </a>
                <ul class="nav navbar-nav pane">
                    <li>@Html.ActionLink("Assessment", "Create", "Results")</li>
                    <li>@Html.ActionLink("Resources", "Resources", "Home")</li>
                    <li>@Html.ActionLink("MyProfile", "Index", "Results")</li>
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/UserScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
