@using System.Web.UI.WebControls
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Learn2Learn</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Architects+Daughter|News+Cycle" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="navtoggle">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/home">
                    <img src="~/Content/images/L2L Brand.png" width="25" height="30" alt="Learn2Learn" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Assessment", "Create", "Results",null, new {@class="modal-link btn-xs btn-success"})</li>
                    <li>@Html.ActionLink("Resources", "Resources", "Home")</li>
                    <li>@Html.ActionLink("MyProfile", "Index", "Results")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - Learn2Learn</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/UserScripts")
    @RenderSection("scripts", required: false)
</body>
</html>